{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "incremental": false,
        "isolatedModules": true,
        "lib": ["es2020"],
        "module": "commonjs",
        "noImplicitAny": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "target": "ES2020"
    },
    "include": ["src/**/*"]
}